<h4>You are in "{{ name }}"</h4>

Width: {{input value=mapWidth size="3"}}
Height: {{input value=mapHeight size="3"}}

<div>
  Character:{{character.name}}
</div>
<div>
  Summery:
</div>


<table style="border: 1px solid gray;">
  {{#each rows as |row|}}
    <tr>
      {{#each row as |cell|}}
        <td class="tile {{ cell.tileClass }}">{{cell.text}}</td>
      {{/each}}
    </tr>
  {{/each}}
</table>
<div>
  <table>
    <tr>
      <td></td>
      <td>
        <button type="button" class="btn btn-default btn-lg" {{action 'move' 0 1}}>
          up
        </button>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>
        <button type="button" class="btn btn-default btn-lg"{{action 'move' -1 0}}>
          Left
        </button>
      </td>
      <td></td>
      <td>
        <button type="button" class="btn btn-default btn-lg"{{action 'move' 1 0}}>
          Right
        </button>
      </td>
    </tr>
     <tr>
      <td></td>
      <td>
        <button type="button" class="btn btn-default btn-lg"{{action 'move' 0 -1}}>
          down
        </button>
      </td>
      <td></td>
    </tr>
  </table>
</div>
